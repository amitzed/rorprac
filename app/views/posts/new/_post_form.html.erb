<%= bootstrap_form_for(@post) do |f| %>
  <%= f.text_field :title,
                   maxlength: 100,
                   placeholder: 'Title',
                   class: 'form-control',
                   required: true,
                   minlength: 5,
                   maxlength: 100 %>
  <%= f.hidden_field :branch, :value, => @branch %>
  <%= f.text_area :content,
                  rows: 6,
                  required: true,
                  minlength: 20,
                  maxlength: 1000,
                  placeholder: 'Type in what you are looking for. (ex. specific interests, level of experience, etc.)',
                  class: 'form-control' %>
 <%= f.collection_select :category_id, @categories, :id, :name, class: 'form-control' %>
 <%= f.submit "Cretae a post", class: 'form-control' %>
<% end %>
